{
  "docs": [
    {
      "_id": "_design/ratings",
      "views": {
        "all": {
          "map": "function (doc) {\n  emit([doc.question, doc.value], 1);\n}"
        },
        "stats": {
          "map": "function (doc) {\n  emit([doc.question, doc.value], 1);\n}",
          "reduce": "_sum"
        },
        "details": {
          "map": "function (doc) {\n  if (doc.type == \"rating\") {\n if (doc.comment != \"no comment\") {\n emit([doc.question, doc.value], doc.comment);\n}\n}"
        }
      },
      "language": "javascript"
    }
  ]
}
